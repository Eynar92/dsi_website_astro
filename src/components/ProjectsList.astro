---
import ProjectItem from "./ProjectItem.astro";
import { projects } from "../data/projects";
---

<div class="projects__list--wrapper">
  <i id="up" class="arrow-icon fa-solid fa-chevron-up"></i>
  <ul class="projects__carousel">
    {
      projects.map(({ id, title }) => {
        return (
          <li class="projects__carousel--item">
            <ProjectItem id={id} title={title} />
          </li>
        );
      })
    }
  </ul>
  <i id="down" class="arrow-icon fa-solid fa-chevron-down"></i>
</div>

<script src="../js/projectsSectionCarousel.js"></script>
<style>
  .projects__list--wrapper {
    height: 40vh;
    width: 95%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    padding: 1rem 0;
  }

  @media (min-width: 420px) {
    .projects__list--wrapper {
      height: 100vh;
      padding: 3rem 0;
    }
  }

  .arrow-icon {
    font-size: 1.5rem;
    color: var(--bgColor);
    cursor: pointer;
    z-index: 2;
  }

  .projects__carousel::-webkit-scrollbar {
    display: none;
  }

  .projects__carousel {
    margin-block-start: 0;
    margin-block-end: 0;
    padding-inline-start: 0;
    height: 100%;
    width: 85%;
    list-style: none;
    display: grid;
    grid-auto-flow: row;
    grid-auto-rows: calc((100% / 8) - 10px);
    gap: 3rem;
    overflow-y: auto;
    scroll-behavior: smooth;
    align-items: center;
  }

  @media (min-width: 420px) {
    .projects__carousel {
      gap: 1.6rem;
    }
  }

  .no-transition {
    scroll-behavior: auto;
  }

  .dragging,
  .dragging .projects__carousel--item .project {
    cursor: grab;
    user-select: none;
    scroll-behavior: auto;
  }
</style>
