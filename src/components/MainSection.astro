---
import bg01 from "/img/bg01.jpeg";
---

<section class="slider">
    <div class="slider__background" style=`background-image: url(${bg01});`>
        <!-- <img
            class="slider__background--image"
            src={bg01}
            alt="Background image slider"
        /> -->
    </div>
    <div class="slider__container">
        <div class="slider__action">
            <h1 class="slider__title">Innovación y acción es nuestro lema</h1>
            <a href="#" class="btn">Saber más</a>
        </div>
        <div class="slider__description">
            <div class="slider__description--paragraph">
                <p class="description">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Ex,
                    distinctio! Velit facere culpa eos veniam magni
                </p>
                <div class="slider__description--controls">
                    <a href="#" class="arrow__left">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            height="1em"
                            viewBox="0 0 384 512"
                        >
                            <path
                                d="M380.6 81.7c7.9 15.8 1.5 35-14.3 42.9L103.6 256 366.3 387.4c15.8 7.9 22.2 27.1 14.3 42.9s-27.1 22.2-42.9 14.3l-320-160C6.8 279.2 0 268.1 0 256s6.8-23.2 17.7-28.6l320-160c15.8-7.9 35-1.5 42.9 14.3z"
                            ></path></svg
                        >
                    </a>
                    <a href="#" class="arrow__right">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            height="1em"
                            viewBox="0 0 384 512"
                        >
                            <path
                                d="M3.4 81.7c-7.9 15.8-1.5 35 14.3 42.9L280.5 256 17.7 387.4C1.9 395.3-4.5 414.5 3.4 430.3s27.1 22.2 42.9 14.3l320-160c10.8-5.4 17.7-16.5 17.7-28.6s-6.8-23.2-17.7-28.6l-320-160c-15.8-7.9-35-1.5-42.9 14.3z"
                            ></path></svg
                        >
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="../js/mainData.js"></script>
<style>
    .slider {
        height: calc(100vh - 6rem);
        width: 100%;
    }

    .slider__background {
        position: absolute;
        top: 6rem;
        right: 0;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: top center;
        height: calc(100vh - 6rem);
        width: 100%;
        z-index: -1;
    }

    @media (min-width: 768px) {
        .slider__background {
            width: 75%;
            background-position: top center;
        }
    }

    /* .slider__background--image {
        width: 100%;
    } */

    .slider__container {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: inherit;
        color: var(--primary);
    }

    @media (min-width: 768px) {
        .slider__container {
            flex-direction: row;
            justify-content: flex-end;
            height: 100%;
        }
    }

    .slider__action {
        padding: 0 2.5%;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        gap: 1rem;
        flex: 1;
    }

    @media (min-width: 768px) {
        .slider__action {
        }
    }

    .slider__title {
        font-size: 4rem;
        font-weight: 900;
        margin: 0;
    }

    @media (min-width: 768px) {
        .slider__action {
            flex: 0.8;
            padding-left: 2.5%;
            gap: 4rem;
            justify-content: center;
        }

        .slider__title {
            font-size: 5rem;
        }
    }

    .btn {
        align-self: flex-start;
        text-decoration: none;
        color: var(--primary);
        font-size: 2rem;
        padding: 1rem 5rem;
        background-color: var(--button);
        border-radius: 2rem;
    }

    .slider__description {
        display: flex;
        justify-content: flex-end;
        align-items: flex-end;
        flex: 1;
    }

    @media (min-width: 768px) {
        .slider__description {
            padding-right: 2.5%;
            flex: 1.2;
        }
    }

    .slider__description--paragraph {
        width: 100%;
        max-height: 90%;
        color: var(--bgColor);
        background-color: var(--primary);
        padding: 2rem 3rem;
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 1fr 4rem;
    }

    @media (min-width: 768px) {
        .slider__description--paragraph {
            width: 100%;
            height: 35%;
        }
    }

    .description {
        margin: 0;
    }

    .slider__description--controls {
        align-self: center;
        font-size: 1.5rem;
        display: flex;
        gap: 3rem;
    }

    .image-fade {
        animation: imgFade 0.5s ease-in-out;
    }

    @keyframes imgFade {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }
</style>
