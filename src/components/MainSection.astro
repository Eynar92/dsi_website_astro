  .slider__container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: inherit;
    color: var(--primary);
  }

  @media (min-width: 768px) {
    .slider__container {
      flex-direction: row;
      justify-content: flex-end;
      height: 100%;
    }
  }

  .slider__action {
    padding: 0 2.5%;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    gap: 1rem;
    flex: 1;
  }

