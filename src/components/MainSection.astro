  }

  .slider__title {
    font-size: 3rem;
    font-weight: 900;
    margin: 0;
  }

  @media (min-width: 768px) {
    .slider__action {
      flex: 0.8;
      padding-left: 2.5%;
      gap: 4rem;
      justify-content: center;
    }

    .slider__title {
      font-size: 6rem;
    }
  }

