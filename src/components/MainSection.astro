<style>
  .slider {
    height: calc(100vh - 6rem);
    width: 100%;
  }

  .slider__background {
    position: absolute;
    top: 6rem;
    right: 0;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: top center;
    height: calc(100vh - 6rem);
    width: 100%;
    z-index: -1;
  }

  .slider__background::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 40%;
    background-image: linear-gradient(
      to right,
      rgba(1, 10, 26, 1),
      rgba(1, 10, 26, 0)
    );
  }

  @media (min-width: 768px) {
    .slider__background {
      width: 75%;
      background-position: top center;
    }
  }

  /* .slider__background--image {
