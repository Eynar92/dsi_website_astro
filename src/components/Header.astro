---
import logo from "../img/dsi_logo_sbg.png";

const pathname = Astro.url.pathname;
---

<header class="header">
    <div class="contenedor barra">
        <a href="/">
            <img src={logo} alt="Imagen logotipo DSI" />
        </a>

        <nav class="navegacion">
            <a href="/" class={pathname === "/" ? "active" : ""}> Inicio</a>
            <a
                href="/servicios"
                class={pathname === "/servicios" ? "active" : ""}
            >
                Servicios
            </a>
            <a
                href="/proyectos"
                class={pathname === "/proyectos" ? "active" : ""}
            >
                Proyectos
            </a>
            <a
                href="/nosotros"
                class={pathname === "/nosotros" ? "active" : ""}
            >
                Nosotros
            </a>
            <a
                href="/contacto"
                class={pathname === "/contacto" ? "active" : ""}
            >
                Contacto
            </a>
        </nav>
    </div>
</header>

<style>
    .header {
        background-color: var(--bgColor);
    }
    .header img {
        width: 10rem;
    }

    .barra {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    @media (min-width: 768px) {
        .barra {
            flex-direction: row;
            justify-content: space-between;
            height: 100px;
        }
    }

    .navegacion {
        margin-top: 5rem;
        display: flex;
        align-items: center;
        gap: 2rem;
    }
    @media (min-width: 768px) {
        .navegacion {
            margin: 0;
        }
    }
    .navegacion a {
        color: var(--primary);
        opacity: 0.8;
        text-decoration: none;
        font-size: 1.4rem;
        font-weight: 700;
        text-transform: uppercase;
        padding: 0.5rem;
        transition-property: background-color;
        transition-duration: 500ms;
        transition-timing-function: ease-out;
        border-radius: 0.8rem;
    }
    .navegacion a:hover,
    .navegacion .active {
        opacity: 1;
        background-color: var(--primary);
        color: var(--bgColor);
        border-radius: 0.8rem;
    }
</style>

